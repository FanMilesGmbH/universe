{
  "id": "{{jenkins.framework-name}}",
  "cpus": {{jenkins.cpus}},
  "mem": {{jenkins.mem}},
  "instances": 1,
  "env": {
      "JENKINS_FRAMEWORK_NAME": "{{jenkins.framework-name}}",
      "JENKINS_CONTEXT": "/service/{{jenkins.framework-name}}",
      "JENKINS_MESOS_MASTER": "{{jenkins.mesos-master}}",
      {{#jenkins.root-url}}
      "JENKINS_ROOT_URL": "{{jenkins.root-url}}",
      {{/jenkins.root-url}}
      "JVM_OPTS": "{{jenkins.jvm-opts}}",
      "LD_LIBRARY_PATH": "/opt/mesosphere/lib",
      "SSH_KNOWN_HOSTS": "{{jenkins.known-hosts}}"
  },
  "ports": [0, 0],
  "container": {
       "type": "DOCKER",
       "docker": {
       {{#jenkins.docker-image}}
           "image": "{{jenkins.docker-image}}",
       {{/jenkins.docker-image}}
       {{^jenkins.docker-image}}
           "image": "{{resource.assets.container.docker.jenkins-100-16513}}",
       {{/jenkins.docker-image}}
           "network" : "HOST"
       },
       "volumes": [
           {
               "containerPath": "/var/jenkins_home",
               "hostPath": "{{jenkins.host-volume}}/{{jenkins.framework-name}}",
               "mode": "RW"
           },
           {
               "containerPath": "/opt/mesosphere",
               "hostPath": "/opt/mesosphere",
               "mode": "RO"
           }
       ]
   },
   {{#jenkins.docker-credentials-uri}}
   "fetch": [
      {
          "uri": "{{jenkins.docker-credentials-uri}}",
          "executable": false,
          "extract": true
      }
   ],{{/jenkins.docker-credentials-uri}}
   "acceptedResourceRoles": [ "{{jenkins.role}}" ],
   "healthChecks": [
    {
      "path": "/service/{{jenkins.framework-name}}",
      "portIndex": 0,
      "protocol": "HTTP",
      "gracePeriodSeconds": 30,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "labels": {
    {{#jenkins.virtual-host}}
    "HAPROXY_GROUP":"external",
    "HAPROXY_0_VHOST":"{{jenkins.virtual-host}}",
    "HAPROXY_0_REDIRECT_TO_HTTPS": "{{jenkins.https-redirect}}",
    {{/jenkins.virtual-host}}
    "MARATHON_SINGLE_INSTANCE_APP": "true",
    "DCOS_PACKAGE_FRAMEWORK_NAME": "{{jenkins.framework-name}}"
  },
  "upgradeStrategy":{
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 0
  }{{#jenkins.pinned-hostname}},
  "constraints": [["hostname", "CLUSTER", "{{jenkins.pinned-hostname}}"]]
  {{/jenkins.pinned-hostname}}
}
